<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body style="background: linear-gradient(75deg, rgb(168, 0, 206), rgb(32, 161, 165));"></body>>
  <form class="container" action="/add-blog" method="POST">
    <!-- 2 column grid layout with text inputs for the first and last names -->

    <div class="mx-auto ">
      <div class="col mb-5 d-flex justify-content-between">
        <h1><b><i>Add Blog </i></b></h1>
        <a href="/show-blogs" class="btn1 btn-secondary p-3 ">Show Blogs</a>
      </div>
      <div class="col">
        <div class="form-outline">
          <label class="form-label" for="form6Example1">First name</label>
          <input type="text" id="form6Example1" name="fname" class="form-control" />
        </div>
      </div>
      <div class="col">
        <div class="form-outline">
          <label class="form-label" for="form6Example2">Last name</label>

          <input type="text" id="form6Example2" name="lname" class="form-control" />
        </div>
      </div>
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="form6Example3">Blog Title</label>

      <input type="text" id="form6Example3" class="form-control" name="title" />
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="form6Example4">Images Links</label>

      <input type="text" id="form6Example4" class="form-control mb-2" name="image1" / placeholder="Link-1">
      <input type="text" id="form6Example4" class="form-control mb-2" name="image2" / placeholder="Link-2">
      <input type="text" id="form6Example4" class="form-control mb-2" name="image3" / placeholder="Link-3">
      <input type="text" id="form6Example4" class="form-control mb-2" name="image4" / placeholder="Link-4">

    </div>

    <!-- Email input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="form6Example5">Email</label>

      <input type="email" id="form6Example5" class="form-control" name="email" />
    </div>

    <!-- Message input -->
    <div class="form-outline mb-4">
      <label class="form-label" for="form6Example7">Blog Information</label>

      <textarea class="form-control" id="form6Example7" rows="4" name="content"></textarea>
    </div>


    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Create Blog</button>



    <style>
      .container {
        top: 8%;
        align-items: center;
        right: 10px;
        left: 10px;
        position: absolute;
        max-width: 1000px;
        margin: 0 auto;
        padding: 60px;
        font-size: large;
        font-weight: 900;
        color: #32023d;
        background: linear-gradient(45deg, rgb(82, 87, 210), rgb(0, 0, 0));
        border-radius: 120px;
        box-shadow: 0 0 5px rgba(4, 20, 171, 0.3);
      }

      .form-control {
        font-weight: 700;

      }

      .col {
        font-weight: 700;
        color: aliceblue;
       
      }



      .body {

        font-family: Arial, sans-serif;
        background: linear-gradient(45deg, rgb(179, 45, 128), rgb(34, 14, 167));
      }

      .h1 {
        align-items: center;
        font-weight: bold;
      }

      .form-label {
        font-weight: 600;
        font-size: x-large;
        display: block;
        margin-bottom: 5px;
        color: rgb(0, 0, 0);

      }

      .btn1 {
        display: block;
        padding: 10px;
        background-color: #cbd858;
        color: #100808;
        border: none;
        border-radius: 120px;
        cursor: pointer;
        font-size: large;
        font-weight: 700;
      }



      .btn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #d2d648;
        color: #100808;
        border: none;
        border-radius: 120px;
        cursor: pointer;
        font-size: large;
        font-weight: 900;
      }
    </style>
  </form>

</body>

</html>